<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.altoine.instatrain.NoConnectionFragment">
    
    <ImageView
        android:id="@+id/iv_no_connection"
        android:src="@drawable/ic_cloud_off_black_70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/iv_no_connection_margin_top"
        android:layout_gravity="center"/>
        <!--android:visibility="invisible"-->

    <TextView
        android:id="@+id/tv_no_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_internet"
        android:textSize="@dimen/tv_no_connection_text_size"
        tools:text="@string/no_internet"
        android:paddingTop="@dimen/tv_no_connection_padding_top"
        android:layout_gravity="center"/>
        <!--android:visibility="invisible"-->

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@string/retry"
        tools:text="@string/retry"
        android:textSize="@dimen/tv_retry_text_size"
        android:textColor="@color/accent"
        android:layout_marginTop="@dimen/tv_retry_margin_top"
        android:background="?android:attr/selectableItemBackground"
        android:layout_gravity="center" />
        <!--android:visibility="invisible"-->
</FrameLayout>
