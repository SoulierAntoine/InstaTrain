<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/list_item_padding_vertical"
    android:paddingTop="@dimen/list_item_padding_vertical">
    <!-- android:paddingLeft="@dimen/list_item_padding_horizontal"
    android:paddingRight="@dimen/list_item_padding_horizontal"> -->


    <ImageView
        android:id="@+id/iv_frame"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_frame_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="3dp"/>
        <!-- android:background="@drawable/alert_shape"/> -->

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        tools:src="@drawable/ic_metro_ligne4"
        app:layout_constraintTop_toTopOf="@+id/iv_frame"
        app:layout_constraintBottom_toBottomOf="@+id/iv_frame"
        app:layout_constraintLeft_toLeftOf="@+id/iv_frame"
        app:layout_constraintRight_toRightOf="@+id/iv_frame" />

    <!-- TODO: replace by values from a dimension file -->
    <ImageView
        android:id="@+id/iv_works"
        android:layout_width="23dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        android:src="@drawable/ic_works"
        app:layout_constraintRight_toRightOf="@+id/iv_frame"
        app:layout_constraintBottom_toBottomOf="@+id/iv_frame"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="3dp"/>



